<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="loginpage_mvvm.ViewModel.LoginPage"
                          xmlns:viewmodel="clr-namespace:loginpage_mvvm.ViewModel"
>
  
    <StackLayout>
        <Entry Text="{Binding Username}" Placeholder="Enter User Name" />
        <Entry Text="{Binding Password}" Placeholder="Enter Password" IsPassword="True"/>
        <Button Command="{Binding loginbuttoncommand}" Margin="10" Text="Login" />
    </StackLayout>
</ContentPage>